@model IEnumerable<Booking.Models.Especificacoes>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("criar novo", "Create")
</p>

<div id="pesquisa">
    @using (Html.BeginForm("Index", "Especificações", FormMethod.Post))
    {
        <input type="text" placeholder="Insira a especificação a procurar" name="texto" />
        <input type="submit" name="Procurar" value="Procurar" />

    }


</div>
<br />
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Descricao)
        </th>
      
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayNameFor(model => model.Descricao)
            </td>
            
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.IDEspecificacao }) |
                @Html.ActionLink("Details", "Details", new { id = item.IDEspecificacao }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.IDEspecificacao })
            </td>
        </tr>
    }

</table>

